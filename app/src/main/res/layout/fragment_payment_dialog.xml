<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/pay_with_transfer"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:gravity="start"
            android:padding="16dp"
            android:text="Pay with Bank transfer"
            android:textColor="@color/black"
            app:elevation="16dp"
            app:icon="@drawable/arrow_right"
            app:iconGravity="end"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/pay_with_crypto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:rippleColor="@color/grey" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/pay_with_crypto"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:gravity="start"
            android:padding="16dp"
            android:text="Pay with Crypto"
            android:textColor="@color/black"
            app:elevation="16dp"
            app:icon="@drawable/arrow_right"
            app:iconGravity="end"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/pay_with_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pay_with_transfer"
            app:rippleColor="@color/grey" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/pay_with_card"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:gravity="start"
            android:padding="16dp"
            android:text="Pay with Card"
            android:textColor="@color/black"
            app:elevation="16dp"
            app:icon="@drawable/arrow_right"
            app:iconGravity="end"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pay_with_crypto"
            app:rippleColor="@color/grey" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>